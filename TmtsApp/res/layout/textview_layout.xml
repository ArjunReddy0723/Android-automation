<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView android:id="@+id/my_textview" android:layout_width="match_parent"
		android:layout_height="0dip" android:layout_weight="1" android:text="Hello world" />

	<EditText android:id="@+id/my_edittext" android:layout_width="match_parent"
		android:layout_height="0dip" android:layout_weight="1" android:text="Hello world" />

	<AutoCompleteTextView android:id="@+id/my_autocompletetextview"
		android:layout_width="match_parent" android:layout_height="0dip"
		android:layout_weight="1" android:completionHint="Country"
		android:text="Hello world" />

	<CheckedTextView android:id="@+id/my_checkedtextview"
		android:layout_width="match_parent" android:layout_height="0dip"
		android:layout_weight="1" android:hint="CheckedTextView"
		android:checkMark="?android:attr/listChoiceIndicatorMultiple"
		android:clickable="true"
		android:gravity="center" />

	<MultiAutoCompleteTextView android:id="@+id/my_multiautocompletetextview"
		android:layout_width="match_parent" android:layout_height="0dip"
		android:layout_weight="1" />

</LinearLayout>
